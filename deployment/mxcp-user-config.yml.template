mxcp: 1

# Transport configuration for Docker deployment
transport:
  provider: streamable-http
  http:
    host: 0.0.0.0
    port: 8001

# LLM Models Configuration
models:
  default: gpt-4o
  models:
    gpt-4o:
      type: openai
      api_key: ${OPENAI_API_KEY}
    gpt-3.5-turbo:
      type: openai
      api_key: ${OPENAI_API_KEY}
    gpt-4.1:
      type: openai
      api_key: ${OPENAI_API_KEY}
      model: gpt-4o  # Map to gpt-4o since gpt-4.1 doesn't exist

# Project configuration with custom secrets example
projects:
  "{{PROJECT_NAME}}-mxcp":
    profiles:
      prod:
        secrets:
          - name: "example-secret"
            type: "custom"
            parameters:
              param_a: "value_a"
              param_b: "value_b"
        # Add more project-specific configuration here as needed
