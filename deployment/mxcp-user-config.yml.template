mxcp: 1

# Transport configuration for Docker deployment
transport:
  provider: streamable-http
  http:
    host: 0.0.0.0
    port: 8001

# LLM Models Configuration
models:
  gpt-4o:
    provider: openai
    api_key: ${OPENAI_API_KEY}
    model: gpt-4o
  gpt-3.5-turbo:
    provider: openai
    api_key: ${OPENAI_API_KEY}
    model: gpt-3.5-turbo

# Project configuration with custom secrets example
projects:
  {{PROJECT_NAME}}-mxcp:
    profiles:
      prod:
        secrets:
          - name: "example-secret"
            type: "custom"
            parameters:
              param_a: "value_a"
              param_b: "value_b"
        # Add more project-specific configuration here as needed
