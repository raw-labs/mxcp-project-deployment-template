mxcp: 1

# Transport configuration for Docker deployment
transport:
  provider: streamable-http
  http:
    host: 0.0.0.0
    port: 8001

# LLM Models Configuration
models:
  gpt-4o:
    provider: openai
    api_key: ${OPENAI_API_KEY}
    model: gpt-4o
  gpt-3.5-turbo:
    provider: openai
    api_key: ${OPENAI_API_KEY}
    model: gpt-3.5-turbo

# Generic Secrets Configuration
# Store any project-specific secrets here
# Examples:
#   database_url: ${DATABASE_URL}
#   api_key: ${EXTERNAL_API_KEY}
#   webhook_secret: ${WEBHOOK_SECRET}
secrets: {}
